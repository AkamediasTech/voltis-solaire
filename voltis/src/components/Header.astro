---
// Header.astro - Composant statique
---

<header class="sticky top-0 z-50 bg-white shadow-sm border-b border-gray-100">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-1">
    <div class="flex justify-between items-center h-20">
      <!-- Logo Section -->
      <div 
        class="flex items-center gap-2 cursor-pointer" 
        data-scroll-top
      >
        <div class="relative flex items-center justify-center">
          <div class="w-20 h-20 bg-edf-blue rounded-full flex items-center justify-center text-white font-bold text-xl">
            <!-- <span class="text-edf-orange text-2xl">G</span>
            <span class="text-blue-600 text-2xl">F</span>
            <span class="text-white text-2xl">S</span> -->
            <!-- GFS -->
             <img 
              src="/gfs-abr-logo-transparent-2.png" 
              alt="Groupe France Solaire" 
              class="w-full h-full object-contain p-3"
            />
          </div>
          <div class="absolute -top-1 -right-1">
            <div class="w-4 h-4 bg-edf-orange rounded-full border-2 border-white"></div>
          </div>
        </div>
        <div class="flex flex-col">
          <span class="text-edf-blue font-bold text-md leading-none tracking-tight uppercase">Groupe</span>
          <span class="text-gray-500 text-xs font-semibold tracking-widest uppercase">France Solaire</span>
        </div>
      </div>

      <!-- Logo 2 -->
      <div 
        class="flex items-center gap-2 cursor-pointer" 
        data-scroll-top
      >
        <div class="relative flex items-center justify-center">
          <div class="w-auto h-20  rounded-full flex items-center justify-center text-white font-bold text-xl p-2">
            <img 
              src="/test-3.jpeg" 
              alt="Groupe France Solaire"
              class="h-20 w-auto object-cover rounded-full"
           
            />
          </div>
          <div class="absolute top-1 right-2">
            <div class="w-4 h-4 bg-edf-orange rounded-full border-2 border-white"></div>
          </div>
        </div>
        <div class="flex flex-col">
          <span class="text-edf-blue font-bold text-md leading-none tracking-tight uppercase">Groupe</span>
          <span class="text-gray-500 text-xs font-semibold tracking-widest uppercase">France Solaire</span>
        </div>
      </div>

      <div 
        class="flex items-center gap-3 cursor-pointer" 
        data-scroll-top
      >
        <div class="relative">
          <!-- <div class=" w-12 h-12 md:w-auto md:h-18 bg-slate-300 rounded-full flex items-center justify-center p-2 text-white "> -->
            <div class="w-12 h-12 md:w-auto md:h-20 rounded-full flex items-center justify-center p-2 text-white">
            <!-- <img 
              src="/groupe-france-solaire-no-text-transparent-1.png" 
              alt="Groupe France Solaire" 
              class="w-full h-full object-contain p-1.5"
            /> -->
              <img 
              src="/gfs-sun-logo.png" 
              alt="Groupe France Solaire" 
              class="w-full h-full  object-contain p-1.5"
            />
             <img 
              src="/gfs-abr-logo-transparent-2.png" 
              alt="Groupe France Solaire" 
              class="w-full h-full object-contain"
            />
              <!-- <img 
              src="/GFS-logo-3D-transparent-4.png" 
              alt="Groupe France Solaire"
              class="h-30 w-auto"
              style="filter: drop-shadow(0 0 1px rgba(255,255,255,0.9)) drop-shadow(0 0 2px rgba(255,255,255,0.5));"
            /> -->
              <img 
              src="/test-2.jpeg" 
              alt="Groupe France Solaire"
              class="h-20 w-auto rounded-full"
              style="filter: drop-shadow(0 0 1px rgba(255,255,255,0.9)) drop-shadow(0 0 2px rgba(255,255,255,0.5));"
            />
          </div>
          <!-- Cercle orange en haut Ã  droite du logo -->
          <!-- <div class="absolute -top-1 -right-1">
            <div class="w-4 h-4 md:w-5 md:h-5 bg-edf-orange rounded-full border-2 border-white"></div>
          </div>
        </div>
        <div class="flex flex-col">
          <span class="text-edf-blue font-bold text-sm leading-none">GROUPE</span>
          <span class="text-gray-500 text-[10px] font-semibold tracking-widest uppercase">France Solaire</span>
        </div> -->
      </div>


      <!-- Action Section -->
      <div class="flex items-center">
        <button 
          data-scroll-top
          class="cursor-pointer bg-edf-blue text-white px-4 md:px-6 py-2.5 rounded-full text-[11px] md:text-sm font-bold hover:bg-edf-lightBlue transition-all shadow-md transform active:scale-95 whitespace-nowrap"
        >
          <span class="md:hidden">Bilan Solaire Gratuit</span>
          <span class="hidden md:inline">Obtenir mon Bilan Solaire Gratuit</span>
        </button>
      </div>
    </div>
  </div>
</header>

<script>
  document.querySelectorAll('[data-scroll-top]').forEach(btn => {
    btn.addEventListener('click', () => {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });
  });
</script>
