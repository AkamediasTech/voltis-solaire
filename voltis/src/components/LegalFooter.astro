---
// LegalFooter.astro - Footer simplifié pour pages légales
import { getConfig } from '@config';

const config = getConfig();
const footer = config?.content.footer;

const copyright = footer?.copyright || `© ${new Date().getFullYear()} - Tous droits réservés.`;
const legalLinks = footer?.legalLinks || [];
---

<footer class="bg-slate-900 text-white py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Navigation principale -->
    <div class="flex flex-col md:flex-row justify-between items-center gap-6 mb-6">
      
      <!-- Lien retour accueil -->
      <a 
        href="/" 
        class="flex items-center gap-2 text-slate-400 hover:text-edf-orange transition-colors text-sm group"
      >
        <svg 
          xmlns="http://www.w3.org/2000/svg" 
          width="18" 
          height="18" 
          viewBox="0 0 24 24" 
          fill="none" 
          stroke="currentColor" 
          stroke-width="2" 
          stroke-linecap="round" 
          stroke-linejoin="round"
          class="group-hover:scale-110 transition-transform"
        >
          <path d="M15 21v-8a1 1 0 0 0-1-1h-4a1 1 0 0 0-1 1v8"/>
          <path d="M3 10a2 2 0 0 1 .709-1.528l7-5.999a2 2 0 0 1 2.582 0l7 5.999A2 2 0 0 1 21 10v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
        </svg>
        <span>Accueil</span>
      </a>

      <!-- Liens légaux -->
      {legalLinks && legalLinks.length > 0 && (
        <nav class="flex flex-wrap justify-center gap-6 text-sm text-slate-400">
          {legalLinks.map(link => (
            <a 
              href={link.href} 
              class="hover:text-white transition-colors"
              class:list={[
                Astro.url.pathname === link.href && 'text-edf-orange'
              ]}
            >
              {link.label}
            </a>
          ))}
        </nav>
      )}
    </div>

    <!-- Copyright -->
    <div class="border-t border-slate-800 pt-6 text-center">
      <p class="text-xs text-slate-500">{copyright}</p>
    </div>
    
  </div>
</footer>
