---
// Layout.astro - Layout principal
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Estimation Solaire | EDF Solutions Solaires Clone',
  description = 'Estimez votre potentiel solaire et découvrez vos économies.'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <!-- Preload LCP image -->
  <link rel="preload" as="image" href="/cinematic-bulb.webp" fetchpriority="high" />
  <!-- <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" /> -->
</head>
<body>
  <div class="min-h-screen flex flex-col font-sans text-gray-900 bg-white">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </div>
  
  <script>
    // Mobile vh fix
    const setVh = () => {
      const vh = window.innerHeight * 0.01;
      document.documentElement.style.setProperty('--vh', `${vh}px`);
    };
    setVh();
    window.addEventListener('resize', setVh);
  </script>
</body>
</html>
