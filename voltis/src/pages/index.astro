---
/**
 * Main Landing Page - Dynamically loads the correct layout based on SITE_ID
 * Each site has its own isolated layout file defining components and their order
 */
import { getConfig } from '@config';
import EcoEnergieFranceLayout from '@layouts/EcoEnergieFranceLayout.astro';
import FranceSolaireLayout from '@layouts/FranceSolaireLayout.astro';

const config = getConfig();

// Map site IDs to their respective layouts
const layouts: Record<string, any> = {
  'eco-energie-france': EcoEnergieFranceLayout,
  'france-solaire': FranceSolaireLayout,
};

const PageLayout = layouts[config.siteId];

if (!PageLayout) {
  throw new Error(
    `No layout found for site "${config.siteId}". ` +
    `Available layouts: ${Object.keys(layouts).join(', ')}`
  );
}
---

<PageLayout />

