---
import Layout from '../layouts/Layout.astro';
import LegalMentions from '../components/LegalMentions.astro';
import LegalHeader from '../components/LegalHeader.astro';
import LegalFooter from '../components/LegalFooter.astro';
import { getConfig } from '../config';
import InitialsLogo from '@components/logos/InitialsLogo.astro';
import EnrLogo from '@components/logos/EnrLogo.astro';
import GFSTextLogo from '@components/logos/GFSTextLogo.astro';
import EEFLogo from '@components/logos/EEFLogo.astro';

const config = getConfig();


const branding = config.branding;


const logoRegistry = { GFSTextLogo, EEFLogo};
const Logo = branding.logoComponent
  ? logoRegistry[branding.logoComponent as keyof typeof logoRegistry]
  : null;

---

